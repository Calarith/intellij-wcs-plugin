<idea-plugin version="2">
  <id>com.lopesdasilva.wcs.plugin</id>
  <name>IntelliJ Oracle WebCenter Sites Plugin</name>
  <version>0.1</version>
  <vendor email="lopesdasilva.rui@gmail.com" url="https://github.com/lopesdasilva/intellij-wcs-plugin">Intellij WCS
    Plugin
  </vendor>

  <description><![CDATA[
      This is a UNOFFICIAL Oracle WebCenter Sites plugin for IntelliJ  .<br>
      <em>This is still alpha version</em>
    ]]></description>

  <change-notes><![CDATA[
      Added on Save Listener to sync to wcs.<br>
      Added Synchronization tool (import/export).<br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->



  <application-components>
    <component>
      <implementation-class>OnFileSaveComponent</implementation-class>
    </component>
  </application-components>

  <module-components>
    <component>
      <implementation-class>PluginConfigurations</implementation-class>
    </component>
  </module-components>
  <project-components>
    <component>
      <implementation-class>WebCenterSitesPlugin</implementation-class>
    </component>
  </project-components>
  <actions>
    <action id="wcs-plugin-sync" class="SyncForm" text="Synchronize Data with WebCenter Sites"
            description="Opens the synchronization window">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
  </actions>
</idea-plugin>